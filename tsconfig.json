{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src"
	]
}
